generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @map("_id")
  name String
  email String @unique
  password String
  createdAt DateTime @default(now())

  rifas Rifa[]
}

model Rifa {
  number String @id @map("_id")
  email String?
  name String?
  createdAt DateTime @default(now())
  sold Boolean @default(false)
  sellerId String?
  seller User? @relation(fields: [sellerId], references: [id])
}

model Event {
  id String @id @map("_id")
  name String
  date DateTime
  createdAt DateTime @default(now())
}